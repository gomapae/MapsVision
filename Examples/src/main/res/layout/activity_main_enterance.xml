<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="Start AR Navigation"
        android:onClick="startNavigation"
        android:textColor="#00a75d"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/selector_start_ar_navigation"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/title_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:text="Start"/>
    <LinearLayout
        android:id="@+id/l_site_start_container"
        android:layout_width="match_parent"
        android:layout_below="@id/title_start"
        android:paddingHorizontal="10dp"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_start_lat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="#1d1d1d"
            android:textStyle="bold"
            android:paddingHorizontal="10dp"
            android:textColorHint="#ccc"
            android:background="@drawable/selector_input"
            android:hint="Latitude"/>
        <EditText
            android:id="@+id/et_start_lng"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1d1d1d"
            android:layout_marginStart="10dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/selector_input"
            android:hint="Longitude"
            android:textColorHint="#ccc"
            android:gravity="center_vertical|start"/>
    </LinearLayout>


    <TextView
        android:id="@+id/title_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/l_site_start_container"
        android:text="End"/>
    <LinearLayout
        android:id="@+id/l_site_end_container"
        android:layout_width="match_parent"
        android:layout_below="@id/title_end"
        android:paddingHorizontal="10dp"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_end_lat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="#1d1d1d"
            android:textStyle="bold"
            android:paddingHorizontal="10dp"
            android:textColorHint="#ccc"
            android:background="@drawable/selector_input"
            android:hint="Latitude"/>
        <EditText
            android:id="@+id/et_end_lng"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1d1d1d"
            android:layout_marginStart="10dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/selector_input"
            android:hint="Longitude"
            android:textColorHint="#ccc"
            android:gravity="center_vertical|start"/>
    </LinearLayout>

    <LinearLayout
